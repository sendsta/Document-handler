{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tender Documents MCP Configuration",
  "description": "Configuration for the Tender Documents Handler MCP Server",
  
  "mcpServers": {
    "tender-docs": {
      "command": "python",
      "args": ["-m", "tender_docs_mcp"],
      "env": {
        "TENDER_UPLOAD_DIR": "${workspaceFolder}/tender-uploads",
        "TENDER_PROCESSED_DIR": "${workspaceFolder}/tender-processed",
        "TENDER_CACHE_DIR": "${workspaceFolder}/tender-cache"
      }
    }
  },
  
  "// Alternative configurations": {
    "using-installed-script": {
      "command": "tender-docs-mcp"
    },
    
    "using-uvx": {
      "command": "uvx",
      "args": ["tender-docs-mcp"]
    },
    
    "using-docker": {
      "command": "docker",
      "args": [
        "run", "-i", "--rm",
        "-v", "${workspaceFolder}/uploads:/app/uploads",
        "tender-docs-mcp:latest"
      ]
    }
  }
}
